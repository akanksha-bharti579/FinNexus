<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Advanced Settings"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_auto_backup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Automatic Backup"
        android:checked="true"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Automatically backup your data every week"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_data_sync"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cloud Sync"
        android:checked="false"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sync your expense data across multiple devices"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_debug_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Debug Mode"
        android:checked="false"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable advanced logging and debugging features"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Database Information"
        android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Database Size: 2.4 MB"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
        android:layout_marginBottom="4dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last Optimized: 2023-08-15"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_optimize_db"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Optimize Database"
        android:layout_gravity="end" />

</LinearLayout> 